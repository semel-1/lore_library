<body>

    <!-- header -->

    <!-- header one -->
    <header class="header">
        <div class="header-1">
            <a href="/home" class="logo"> <i class="bi bi-book"></i> LORE</a>


            <form action="/search" class="search-form" method="get">
                <input type="search" name="search" placeholder="search here..." id="search-box">
                <label for="search-box"><i class="bi bi-search"></i></label>
            </form>


            <% if (foundUser=="student" ) { %>
                <div class="icons-sation">
                    <div id="search-btn" class="bi bi-search"></div>
                    <a href="/signup" class="fa-solid fa-user-plus"></a>
                    <a href="/login" class="fa-solid fa-right-to-bracket"></a>

                </div>
                <% }else{ %>
                    <div class="icons-sation">
                        <div id="search-btn" class="bi bi-search"></div>
                        <a href="/profile" class="fa-solid fa-user"></a>
                        <a href="/logout" class="fa-solid fa-arrow-right-from-bracket"></a>
                    </div>
                    <% } %>


        </div>

        <!-- header two -->
        <div class="header-2">
            <nav class="navbar">
                <a href="#home">Home</a>
                <a href="#services">Services</a>
                <a href="#categories">Categories</a>
                <a href="#admin">Admins</a>
                <a href="#contact">Contact </a>
            </nav>

        </div>
    </header>

    <!-- bottom navbar -->

    <nav class="bottom-navbar">
        <a href="#home" class="bi bi-house-door-fill"></a>
        <a href="#categories" class="bi bi-justify"></a>
        <a href="#Arrivals" class="bi bi-tags-fill"></a>
        <a href="#admin" class="bi bi-wechat"></a>
        <a href="#contact"></a>
    </nav>