<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Log In</title>
        <link rel="stylesheet" href="../style/css/login.css">
    </head>

    <body id="particles-js">
        <div class="contener">
            <form class="box" action="/auth/login" method="post">

                <div class="icon_mood">
                    <label class="switch">
                        <input type="checkbox">
                        <span id="icon" class="slider"></span>
                    </label>
                </div>

                <div class="form">

                    <h2>Login</h2>

                    <!-- طباعة الخطأ -->
                    <% if (errorMessage.length > 0){ %>
                    <div class="alert">
                        <p class="errorMessage">
                            <%= errorMessage %>
                        </p>
                    </div>
                    <% } %>

                    <div class="inputBox">
                        <input type="email" name="email" required
                            autocomplete="off">
                        <label>
                            <span style="transition-delay:0ms">E</span><span
                                style="transition-delay:50ms">m</span><span
                                style="transition-delay:100ms">a</span><span
                                style="transition-delay:150ms">i</span><span
                                style="transition-delay:150ms">l</span>
                        </label>
                        <i></i>
                    </div>

                    <div class="inputBox">
                        <input type="password" name="password" required
                            autocomplete="off">
                        <label>
                            <span style="transition-delay:0ms">P</span><span
                                style="transition-delay:50ms">a</span><span
                                style="transition-delay:100ms">s</span><span
                                style="transition-delay:150ms">s</span><span
                                style="transition-delay:150ms">w</span><span
                                style="transition-delay:150ms">o</span><span
                                style="transition-delay:200ms">r</span><span
                                style="transition-delay:250ms">d</span>
                        </label>
                        <i></i>
                    </div>

                    <div class="links">
                        <a href="/signup">sign up</a>
                    </div>

                    <div class="submit_b">
                        <button type="submit">Login</button>
                    </div>
                </div>
            </form>
        </div>

        <script src="../style/js/change_theme.min.js"></script>
        <script src="../style/js/app.js"></script>
        <script src="../style/js/particles.js"></script>

    </body>

</html>